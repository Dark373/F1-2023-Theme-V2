{
    "ComponentName": "event_calendar",
    "BlockType": "stack",
    "Witdh": "*",
    "MarginRight": 12,
    "MarginLeft": 12,
    "Orientation": "Vertical",
    "Items": [
        {
            "BlockType": "dock",
            "Orientation": "Horizontal",
            "VerticalAlignment": "Center",
            "Width": "auto",
            "Height": 160,
            "Items": [
                {
                    "BlockType": "stack",
                    "Width": 160,
                    "Orientation": "Vertical",
                    "Items": [
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "Width": "",
                            "Height": 125,
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "Padding": "80, 40",
                                    "Source": "R{Item.Position, Converter=NumberSubtract, Parameter=0}",
                                    "HorizontalAlignment": "Center",
                                    "VerticalAlignment": "Center",
                                    "FontName": "{FontBlack}",
                                    "Foreground": "{White}",
                                    "FontSize": 56,
                                    "Background": "EE0000",
                                    "Triggers": [
                                        {
                                            "Condition": "{Item.IsChampionshipStatus, Converter=BoolReverse}",
                                            "Setters": [
                                                {
                                                    "Property": "Source",
                                                    "Value": "R0"
                                                }
                                            ]
                                        },
                                        {
                                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                            "Property": "Background",
                                            "Value": "#2B2B2B"
                                        },
                                        {
                                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                            "Property": "Foreground",
                                            "Value": "#606060"
                                        }
                                    ],
                                    "TextOptions": {
                                        "HorizontalAlignment": "Center"
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "BlockType": "stack",
                    "MarginTop": -18,
                    "PaddingLeft": 24,
                    "PaddingRight": 24,
                    "PaddingTop": 15,
                    "PaddingBottom": 12,
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "Background": "#1F1F1F",
                    "Triggers": [
                        {
                            "Condition": "{DarkTheme}",
                            "Setters": [
                                {
                                    "Property": "Background",
                                    "Value": "{White}"
                                },
                                {
                                    "Property": "PaddingTop",
                                    "Value": "27"
                                },
                                {
                                    "Property": "PaddingBottom",
                                    "Value": "28"
                                },
                                {
                                    "Property": "PaddingLeft",
                                    "Value": "24"
                                },
                                {
                                    "Property": "PaddingRight",
                                    "Value": "24"
                                }
                            ]
                        },
                        {
                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                            "Property": "Background",
                            "Value": "#1F1F1F"
                        }
                    ],
                    "Items": [
                        //flag
                        {
                            "BlockType": "image",
                            "Height": 100,
                            "Width": 110,
                            "PaddingTop": 0,
                            "PaddingBottom": 0,
                            "MarginBottom": 0,
                            "VerticalAlignment": "Center",
                            "ImageOptions": {
                                "Path": "{Item.Track.Nation.LogotypePath}",
                                "VerticalAlignment": "Center"
                            },
                            "Triggers": [
                                {
                                    "Condition": "{DarkTheme}",
                                    "Setters": [
                                        {
                                            "Property": "PaddingTop",
                                            "Value": "-15"
                                        },
                                        {
                                            "Property": "PaddingBottom",
                                            "Value": "-15"
                                        },
                                        {
                                            "Property": "PaddingLeft",
                                            "Value": "2"
                                        },
                                        {
                                            "Property": "PaddingRight",
                                            "Value": "2"
                                        },
                                        {
                                            "Property": "Background",
                                            "Value": "{Black}"
                                        }
                                    ]
                                },
                                {
                                    "Condition": "{Item.Track.Name, Converter=StringEquals, Parameter=TBC}",
                                    "Property": "Source",
                                    "Value": "Tracks/tbc.png"
                                },
                                {
                                    "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                    "Property": "Opacity",
                                    "Value": 15
                                }
                            ]
                        }
                    ]
                },
                {
                    "WidthStretch": true,
                    "BlockType": "stack",
                    "Background": "#1F1F1F",
                    "Width": "*",
                    "Orientation": "Vertical",
                    "Height": 125,
                    "Triggers": [
                        {
                            "Condition": "{DarkTheme}",
                            "Setters": [
                                {
                                    "Property": "Background",
                                    "Value": "{White}"
                                }
                            ]
                        },
                        {
                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                            "Property": "Background",
                            "Value": "#1F1F1F"
                        }
                    ],
                    "Items": [
                        {
                            "BlockType": "text",
                            "Foreground": "{White}",
                            "Orientation": "Vertical",
                            "FontName": "{FontItalic}",
                            "VerticalAlignment": "Center",
                            "FontSize": 24,
                            "MarginTop": 25,
                            "Source": "{Item.Date, Converter=DateToDayOfMonth} [{Item.Date, Converter=DateToMonthInWords}]",
                            "Triggers": [
                                {
                                    "Condition": "{DarkTheme}",
                                    "Setters": [
                                        {
                                            "Property": "Foreground",
                                            "Value": "{Black}"
                                        }
                                    ]
                                },
                                {
                                    "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                    "Property": "Foreground",
                                    "Value": "#606060"
                                }
                            ]
                        },
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "VerticalAlignment": "Center",
                            "Width": "*",
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "MarginTop": 0,
                                    "Foreground": "EE0000",
                                    "HorizontalAlignment": "Left",
                                    "VerticalAlignment": "Center",
                                    "FontName": "{FontBlack}",
                                    "FontSize": 32,
                                    "Source": "[{Item.Track.CountryName, converter=StringToUpperString}]",
                                    "Triggers": [
                                        {
                                            "Condition": "{Item.IsChampionshipStatus, Converter=BoolReverse}",
                                            "Setters": [
                                                {
                                                    "Property": "Source",
                                                    "Value": "PRE-SEASON"
                                                }
                                            ]
                                        },
                                        {
                                            "Condition": "{Item.Track.Name, Converter=StringEquals, Parameter=TBC}",
                                            "Property": "Source",
                                            "Value": "TBC"
                                        },
                                        {
                                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                            "Property": "Foreground",
                                            "Value": "#474747"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "Width": "*",
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "Foreground": "{White}",
                                    "MarginBottom": 16,
                                    "FontName": "{FontBold}",
                                    "FontSize": 24,
                                    "Source": "[{Item.Track.LocationName, Converter=StringToUpperString}]",
                                    "Triggers": [
                                        {
                                            "Condition": "{DarkTheme}",
                                            "Setters": [
                                                {
                                                    "Property": "Foreground",
                                                    "Value": "{Black}"
                                                }
                                            ]
                                        },
                                        {
                                            "Condition": "{Item.Track.LocationName, Converter=StringEquals, Parameter=TBC}",
                                            "Property": "Source",
                                            "Value": "TBC"
                                        },
                                        {
                                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                            "Property": "Foreground",
                                            "Value": "#606060"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "BlockType": "itemstack",
                    "Background": "#1F1F1F",
                    "Orientation": "Horizontal",
                    "HorizontalAlignment": "Right",
                    "ItemStackOptions": {
                        "ItemSource": "{Item.Races}",
                        "ItemTemplate": {
                            "BlockType": "image",
                            "Height": 125,
                            "Width": 36,
                            "Source": "sprint.png",
                            "HorizontalAlignment": "Right",
                            "FontName": "{FontBold}",
                            "RenderIf": "{Item.RaceType, Converter=StringEquals, Parameter=Sprint}",
                            "Triggers": [
                                {
                                    "Condition": "{DarkTheme}",
                                    "Setters": [
                                        {
                                            "Property": "Background",
                                            "Value": "FFFFFF"
                                        }
                                    ]
                                },
                                {
                                    "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                    "Setters": [
                                        {
                                            "Property": "Background",
                                            "Value": "1F1F1F"
                                        },
                                        {
                                            "Property": "Source",
                                            "Value": "sprint_.png"
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "BlockType": "shape",
            "Opacity": 0,
            "Width": 700,
            "Height": 1,
            "RenderIf": "{DarkTheme}",
            "ShapeOptions": {
                "ShapeType": "rectangle",
                "Fill": "#101010"
            }
        },
        {
            "BlockType": "shape",
            "Opacity": 0,
            "Width": 700,
            "Height": 1,
            "RenderIf": "{DarkTheme, Converter=BoolReverse}",
            "ShapeOptions": {
                "ShapeType": "rectangle",
                "Fill": "#E9E9EB"
            }
        }
    ]
}