{
    "BlockType": "dock",
    "PaddingLeft": 12,
    "PaddingRight": 4,
    "Items": [
        //left part
        {
            "BlockType": "stack",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Center",
            "Items": [
                //flag
                {
                    "BlockType": "image",
                    "Height": 40,
                    "MarginRight": 12,
                    "VerticalAlignment": "Center",
                    "ImageOptions": {
                        "Path": "{Item.Driver.Nationality.LogoPath}",
                        "VerticalAlignment": "Center"
                    }
                },

                //name
                {
                    "BlockType": "text",
                    "MaxWidth": 600,
                    "MarginLeft": 10,
                    "Source": "{Item.Driver.Name}",
                    "Foreground": "{ForegroundDefault}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "FontName": "{Formula1-Regular}",
                    "FontSize": 30,
                    "Triggers": [
                                   {
                                        "Condition":"{SwitchNameFields}",
                                        "Setters":[
                                            {
                                                "Property": "Source",
                                                "Value": "{Item.Driver.RealName}"
                                            }
                                        ]
                                    },
                                 ]
                },
                {
                    "BlockType": "text",
                    "MaxWidth": 600,
                    "MarginLeft": 8,
                    "Source": "{Item.Driver.RealName, Converter=StringToUpperString}",
                    "Foreground": "{ForegroundAlt}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "FontName": "{Formula1-Bold}",
                    "FontSize": 30,
                    "Triggers": [
                                   {
                                        "Condition":"{SwitchNameFields}",
                                        "Setters":[
                                            {
                                                "Property": "Source",
                                                "Value": "{Item.Driver.Name, Converter=StringToUpperString}"
                                            }
                                        ]
                                    },
                                 ]
                },
                //icon badges
                {
                    "BlockType": "itemstack",
                    "Spacing": 4,
                    "MarginLeft": 6,
                    "MarginTop": 4,
                    "ItemStackOptions": {
                        "ItemSource": "{Item.Driver.BadgeImages}",
                        "Template": {
                            "BlockType": "image",
                            "Height": 30,
                            "Source": "{Item}"
                        }
                    }
                },

                //text badge
                {
                    "BlockType": "text",
                    "MaxWidth": 400,
                    "MarginLeft": 8,
                    "MarginTop": 0,
                    "Source": "",
                    "HorizontalAlignment": "Left",
                    "Triggers": [
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Foreground",
            "Value": "000000",
        }
    ],
                    "VerticalAlignment": "Top",
                    "Foreground" : "A9ACB5",
                    "FontName": "{FontNameDefault}",
                    "FontSize": 16
                }
            ]
        },

        //right part
        {
            "BlockType": "stack",
            "Height": "*",
            "MarginLeft": 82,
            "HorizontalAlignment": "Right",
            "VerticalAlignment": "Center",
            "Items": [
                //teams block
                {
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "Spacing": 8,
                    "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Teams}",
                    "Items": [
                        
                        //name
                        {
                            "BlockType": "text",
                            "Source": "",
                            "HorizontalAlignment": "Left",
                            "VerticalAlignment": "Center",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 22,
                            "Foreground": "{Item.Team.Color}",
                            "TextOptions": {
                                "VerticalAlignment": "Center"
                            }
                        },

                        //logo
                        {
                            "BlockType": "image",
                            "Height": 40,
                            "MarginRight": 0,
                            "VerticalAlignment": "Center",
                            "ImageOptions": {
                                "Path": "",
                                "VerticalAlignment": "Center"
                            }
                        }
                    ]
                },

                //cars block
                {
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "Spacing": 8,
                    "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                    "Items": [
                        //name
                        {
                            "BlockType": "text",
                            "Source": "{Item.Car.Name}",
                            "MarginRight": 8,
                            "HorizontalAlignment": "Left",
                            "VerticalAlignment": "Center",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 22,
                            "TextOptions": {
                                "VerticalAlignment": "Center"
                            }
                        },

                        //logo
                        {
                            "BlockType": "image",
                            "Height": 40,
                            "MarginRight": 0,
                            "VerticalAlignment": "Center",
                            "ImageOptions": {
                                "Path": "{Item.Car.Vendor.LogoPath}",
                                "VerticalAlignment": "Center"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
