{
    "BlockType": "dock",
    "PaddingLeft": 12,
    "PaddingRight": 4,
    "Items": [
        //left part
        {
            "BlockType": "stack",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Center",
            "Items": [
                //flag
                {
                    "BlockType": "image",
                    "Height": 40,
                    "MarginRight": 12,
                    "VerticalAlignment": "Center",
                    "ImageOptions": {
                        "Path": "{Item.Driver.Nationality.LogoPath}",
                        "VerticalAlignment": "Center"
                    }
                },
                //name
                {
                    "BlockType": "text",
                    "MaxWidth": 600,
                    "MarginLeft": 10,
                    "Source": "{Item.Driver.Name}",
                    "Foreground": "{ForegroundDefault}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "FontName": "{Formula1-Regular}",
                    "FontSize": 30,
                    "Triggers": [
                        {
                            "Condition": "{RealNameOnRenders}",
                            "Property": "Source",
                            "Value": "{Item.Driver.RealName}"
                        },
                        {
                            "Condition": "{InGameNameOnRenders}",
                            "Property": "Source",
                            "Value": "{Item.Driver.InGameName}"
                        },
                        {
                            "Condition": "{SwitchNameFields}",
                            "Property": "Source",
                            "Value": "{Item.Driver.RealName}"
                        }
                    ]
                },
                {
                    "BlockType": "text",
                    "MaxWidth": 600,
                    "MarginLeft": 8,
                    "Source": "{Item.Driver.RealName, Converter=StringToUpperString}",
                    "Foreground": "{ForegroundAlt}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "FontName": "{Formula1-Bold}",
                    "FontSize": 30,
                    "Triggers": [
                        {
                            "Condition": "{SwitchNameFields}",
                            "Setters": [
                                {
                                    "Property": "Source",
                                    "Value": "{Item.Driver.Name, Converter=StringToUpperString}"
                                }
                            ]
                        },
                        {
                            "Condition": "{Item.Driver.RealName, Converter=EmptyObjectToTrue}",
                            "Property": "MarginLeft",
                            "Value": 0
                        }
                    ]
                },
                //icon badges
                {
                    "BlockType": "itemstack",
                    "Spacing": -2,
                    "VerticalAlignment": "Center",
                    "ItemStackOptions": {
                        "ItemSource": "{Item.Driver.BadgeImages}",
                        "Template": {
                            "BlockType": "image",
                            "Height": 30,
                            "Source": "{Item}"
                        }
                    }
                },
                //text badge
                {
                    "BlockType": "text",
                    "MaxWidth": 400,
                    "MarginLeft": 2,
                    "MarginTop": 0,
                    "Source": "{Item.Driver.BadgeText}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Top",
                    "Foreground": "A9ACB5",
                    "FontName": "{FontNameDefault}",
                    "FontSize": 16,
                    "Triggers": [
                        {
                            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
                            "Property": "Foreground",
                            "Value": "{Black}"
                        }
                    ]
                }
            ]
        }
    ]
}