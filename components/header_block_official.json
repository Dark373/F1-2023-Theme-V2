//header block
{
    "Name": "headerBlock",
    "BlockType": "dock",
    "Orientation": "Horizontal",
    "Items": [
        //headerLeft
        {
            "Name": "headerLeftPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Spacing": 0,
            "HorizontalAlignment": "Left",
            "Items": [
                //league name
                {
                    "BlockType" : "stack",
                    "VerticalAlignment" : "Center",
                    "Items" :
                    [
                         {                            
                            "BlockType": "text",
                            "VerticalAlignment": "Center",
                            "Source": "{Season.LeagueInfo.LeagueShortName, Converter=StringToUpperString} {Season.Name, Converter=StringToUpperString} {Session.Track.CountryName, Converter=StringToUpperString}",                            
                            "FontName": "{Formula1-Black}",
                            "FontSize": 50,
                            "Foreground": "000000",
                            "Triggers" : [
                                {
                                     "Condition": "{DarkTheme}",
                                     "Property": "Foreground",
                                     "Value": "FFFFFF"
                                },
                             ]
                        },
                     ]
                },
                {
                    "Name": "headerSessionLine",
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "Spacing": 0,
                    "Items": [
                        {
                            "BlockType": "text",
                            "VerticalAlignment": "Center",
                            "Source": "[{Statistics.Header, Converter=StringToUpperString}]",
                            "FontName": "{Formula1-Black}",
                            "FontSize": 80,
                            "Foreground": "FF0000"
                        },
                    ]
                },       
            ]
        },

         //headerRight
        {
            "Name": "headerRightPart",
            "BlockType": "stack",
            "MarginLeft" : 20,
            "Orientation": "Vertical",
            "HorizontalAlignment": "Right",
            "Items": [
                {
                    "BlockType": "stack",
                    "Items": [

                        {
                            "Name": "leagueLogo",
                            "BlockType": "image",
                            "Height": "{LogoSize}",
                            "Margin": "0, 0, 0, 0",
                            "Source": "{Season.LeagueInfo.LeagueLogo}"
                        }
                    ]
                }
            ]
        }
    ]
}