//header block
{
    "Name": "headerBlock",
    "MarginBottom": -70,
    "BlockType": "dock",
    "Orientation": "Horizontal",
    "Items": [
        //headerLeft
        {
            "Name": "headerLeftPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Spacing": 0,
            "HorizontalAlignment": "Left",
            "Items": [
        {
            "Name": "f1-logo",
            "BlockType": "image",
            "MarginBottom": 4,
            "Height": 44,
            "HorizontalAlignment" : "Left",
            "Source": "images/f1-logo.png",
            "RenderIf":"{Season.LeagueInfo.LeagueLogo, Converter=EmptyObjectToTrue}",
            "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Source",
            "Value": "images/f1-logo-white.png",
        }
    ],
        },
        {
            "Name":"LeagueLogo",
            "BlockType":"image",
            "Height": "{LogoSize}",
            "Width":"auto",
            "HorizontalAlignment" : "Left",
            "Source": "{Season.LeagueInfo.LeagueLogo}",
            "RenderIf":"{Season.LeagueInfo.LeagueLogo, Converter=EmptyObjectToFalse}"
        },
                //league name
                {
                    "BlockType" : "stack",
                    "VerticalAlignment" : "Center",
                    "Items" :
                    [
                         {                            
                            "BlockType": "text",
                            "VerticalAlignment": "Center",
                            "Source": "{Season.Name, Converter=StringToUpperString}",                            
                            "FontName": "{Formula1-Black}",
                            "FontSize": 57,
                            "Foreground": "FF0000"
                        },
                        {
                            "BlockType": "text",
                            "VerticalAlignment": "Center",
                            "Source": " [TEAM]",                            
                            "FontName": "{Formula1-Black}",
                            "FontSize": 57,
                            "Foreground": "000000",
                            "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Foreground",
            "Value": "FFFFFF",
        },
        {
            "Condition": "{ChangeWordOrder}",
            "Property": "Source",
            "Value": " [STANDINGS]",
        }
    ],
                        },
                        ]
                },
                {
                    "Name": "headerSessionLine",
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "MarginTop": -8,
                    "Spacing": 0,
                    "Items": [
                        {
                            "BlockType": "text",
                            "VerticalAlignment": "Center",
                            "Source": "[STANDINGS]",                            
                            "FontName": "{Formula1-Black}",
                            "FontSize": 57,
                            "Foreground": "000000",
                            "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Foreground",
            "Value": "FFFFFF",
        },
        {
            "Condition": "{ChangeWordOrder}",
            "Property": "Source",
            "Value": "[TEAM]",
        }
    ],
                        },
             ]
          },      
            ]
        },
    ]
}