{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "48, 40, 48, 40",
        "Orientation": "Vertical",
        "Items": [
            //header block
            {               
                "BlockType": "component",
                "ComponentName": "header_block_teams_official",
                "ComponentOptions" :
                {
                    "Vars":
                    {
                        "header" : "Team Standings"
                    }
                }               
            },
            {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "HorizontalAlignment": "Right",
                    "VerticalAlignment": "Center",
                    "MarginTop": 0,
                    "MarginRight": 0,
                    "MarginBottom": 0,
                    "Spacing": 0,
                    "Items": [
                        {
                            "BlockType": "text",
                            "MarginTop": 0,
                            "MarginBottom": 0,
                            "HorizontalAlignment": "Right",
                            "VerticalAlignment": "Center",
                            "Source": "[POINTS AFTER THE]",                            
                            "FontName": "{Formula1-Regular}",
                            "FontSize": 25,
                            "Foreground": "000000",
                            "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Foreground",
            "Value": "FFFFFF",
        }
    ],
                        },
                        {
                            "BlockType": "text",
                            "VerticalAlignment": "Top",
                            "HorizontalAlignment": "Right",
                            "Source": "{GPName, Converter=StringToUpperString} GP",                            
                            "FontName": "{Formula1-Bold}",
                            "FontSize": 25,
                            "Foreground": "000000",
                            "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Foreground",
            "Value": "FFFFFF",
        },
        {
            "Condition": "{ChangeWordOrder}",
            "Property": "Source",
            "Value": "GP {GPName, Converter=StringToUpperString}",
        }
    ],
                        },
                    ]
                },
            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "MarginRight" : 60,
                "TableOptions": {
                    "ItemsSource": "{Standings.Teams}",
                    "RowSpacing": 12,
                    "ColSpacing": 0,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 12,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [                        
                        {
                            "Header": "",
                            "WidthStretch" : true,                            
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "team_line_cell_official"   
                            }
                        },                        

                        //points
                        {
                            "Header": "",
                            "MarginLeft" : 10,
                            "Template": {
                                
                                "BlockType": "dock",
                                "PaddingRight": 50,
                                "PaddingLeft": 50,
                                "Height": 92,
                                "WWidth": 730,
                                "Background": "{BackgroundDefault}", 
                                "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Background",
            "Value": "171717",
        }
    ],      
                                "Items": [                                    
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Points}",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "FontName": "{Formula1-Black}",
                                        "FontSize": 60,
                                        "Foreground" : "FFFFFF",
                                        "TextOptionsExtern": "primaryNumber",
                                        "Triggers": [
        {
            "Condition": "{Item.Points, Converter=EmptyObjectToTrue}",
            "Property": "Source",
            "Value": "0",
        },
        {
            "Condition": "{ChampionColour}",
            "Property": "Foreground",
            "Value": "E9C652",
        },
        {
            "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
            "Property": "Foreground",
            "Value": "FFFFFF",
        }
    ],
                                    }
                                ],
                            }
                        },
                    ]
                }
            }
        ]
    }
}
