                                "BlockType": "stack",
                                "Orientation": "Vertical",
                                "Spacing": 0,
                                "HorizontalAlignment": "Center",
                                "Triggers": [
                                    {
                                        "Condition": "{DarkTheme, Converter=BoolReverse}",
                                        "Setters": [
                                            {
                                                "Property": "PaddingTop",
                                                "Value": "18"
                                            },
                                        ]
                                    }
                                ],
                                "Items": [
                                    {
                                        "BlockType": "image",
                                        "Source": "{Item.Track.Nation.LogoPath}",
                                        "HorizontalAlignment": "Center",
                                        "Width": 120,
                                        "Height": 120,
                                        "Triggers": [
                                            {
                                                "Condition": "{DarkTheme, Converter=BoolReverse}",
                                                "Setters": [
                                                    {
                                                        "Property": "Background",
                                                        "Value": "000000"
                                                    },
                                                    {
                                                        "Property": "PaddingTop",
                                                        "Value": "-18"
                                                    },
                                                    {
                                                        "Property": "PaddingBottom",
                                                        "Value": "-18"
                                                    },
                                                    {
                                                        "Property": "PaddingLeft",
                                                        "Value": "2"
                                                    },
                                                    {
                                                        "Property": "PaddingRight",
                                                        "Value": "2"
                                                    },
                                                    {
                                                        "Property": "MarginBottom",
                                                        "Value": "18"
                                                    }
                                                ]
                                            }
                                        ],
                                    },
                                    {
                                        "BlockType": "text",
                                        "MarginBottom": 8,
                                        "HorizontalAlignment": "Center",
                                        "Source": "{Item.Track.Nation.Code}",
                                        "FontSize": 30,
                                        "Foreground": "000000",
                                        "Triggers": [
                                            {
                                                "Condition": "{DarkTheme}",
                                                "Property": "Foreground",
                                                "Value": "FFFFFF",
                                            },
                                        ]
                                    },
                                ]
                            },
                            // "Width": "120",
                            "Template": {
                                "Padding": "0, 0",
                                "RenderIf": "{Item.Event.WinnerString, Converter=EmptyObjectToFalse}",
