{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "Name": "headerBlock",
                "MarginBottom": "-85",
                "BlockType": "dock",
                "Orientation": "Horizontal",
                "Items": [
                    {
                        "BlockType": "component",
                        "ComponentName": "header_block_standings",
                        "ComponentOptions": {
                            "Vars": {
                                "fontsize0": "57",
                                "fontsize1": "57",
                                "source0": "[TEAM]",
                                "source1": "[STANDINGS]"
                            }
                        }
                    }
                ]
            },
            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "MarginTop": -80,
                "Margin": "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Standings.Teams}",
                    "RowSpacing": 12,
                    "ColSpacing": 0,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 30,
                        "Foreground": "000000",
                        "MarginBottom": 8,
                        "Triggers": [
                            {
                                "Condition": "{DarkTheme}",
                                "Property": "Foreground",
                                "Value": "FFFFFF",
                            },
                        ]
                    },
                    "Columns": [
                        //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "component",
                                "RenderIf": "{RenderPositions}",
                                "ComponentName": "columns",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "70",
                                        "background": "171717",
                                        "source": "{Item.PositionString}",
                                        "font": "{FontBlack}",
                                        "foreground": "{White}",
                                        "fontsize": "60"
                                    }
                                }
                            }
                        },
                        //team line
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "team_line_cell_official",
                                "ComponentOptions": {
                                    "Vars": {}
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{RenderPositions}",
                                        "Property": "MarginLeft",
                                        "Value": "10",
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "â€Ž[POINTS]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "",
                                        "width": "225",
                                        "background": "171717",
                                        "source": "{Item.Points}",
                                        "font": "{FontBlack}",
                                        "foreground": "{White}",
                                        "fontsize": "60"
                                    }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{ChampionColour}",
                                        "Property": "Foreground",
                                        "Value": "E9C652"
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
                                        "Property": "Foreground",
                                        "Value": "{White}"
                                    },
                                    {
                                        "Condition": "{Item.Points, Converter=EmptyObjectToTrue}",
                                        "Property": "Source",
                                        "Value": "0",
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "",
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "RenderIf": "{PositionJump}",
                                "ComponentName": "position_jump_cell_official"
                            }
                        },
                        {
                            "Header": "[INTERVAL]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "RenderIf": "{GapInterval}",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "",
                                        "background": "171717",
                                        "source": "+{Item.PointsToAboveDiff}",
                                        "font": "{FontBlack}",
                                        "foreground": "{White}",
                                        "fontsize": "60"
                                    }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{Item.Index, Converter=NumberEquals, Parameter=0}",
                                        "Property": "Source",
                                        "Value": ""
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "[LEADER]",
