{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "0,10,50,0",
        "Orientation": "Vertical",
        "Items": [
            {
                "Name": "headerBlock",
                "MarginLeft": 10,
                "BlockType": "dock",
                "Orientation": "Horizontal",
                "Items": [
                    //headerLeft
                    {
                        "Name": "headerLeftPart",
                        "BlockType": "stack",
                        "Orientation": "Horizontal",
                        "Spacing": 0,
                        "HorizontalAlignment": "Left",
                        "Items": [
                            {
                                "BlockType": "image",
                                "Height": "150",
                                "HorizontalAlignment": "Left",
                                "Source": "{Session.Track.Nation.LogoPath}",
                                "Background": "{Black}",
                                "Padding": "2, -23"
                            },
                            {
                                "Name": "headerLeftPart",
                                "BlockType": "stack",
                                "Orientation": "Vertical",
                                "MarginLeft": 20,
                                "VerticalAlignment": "Center",
                                "HorizontalAlignment": "Left",
                                "Items": [
                                    //track name
                                    {
                                        "BlockType": "stack",
                                        "VerticalAlignment": "Center",
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "VerticalAlignment": "Center",
                                                "PaddingTop": 5,
                                                "Source": "[{Session.Track.CircuitName, Converter=StringToUpperString} GRAND PRIX]",
                                                "FontName": "{Formula1-Regular}",
                                                "FontSize": 30,
                                                "Foreground": "{Black}"
                                            }
                                        ]
                                    },
                                    {
                                        "Name": "headerSessionLine",
                                        "BlockType": "stack",
                                        "VerticalAlignment": "Center",
                                        "MarginTop": 0,
                                        "Spacing": 0,
                                        "Items": [
                                            {
                                                "Name": "leagueLogo",
                                                "BlockType": "text",
                                                "Foreground": "{Black}",
                                                "FontSize": 50,
                                                "FontName": "Formula1-Bold",
                                                "Source": "{Session.Track.CircuitFullName}"
                                            },
                                            {
                                                "BlockType": "shape",
                                                "MarginTop": 0,
                                                "MarginLeft": 10,
                                                "Opacity": 100,
                                                "Width": "948",
                                                "VerticalAlignment": "Center",
                                                "Height": 25,
                                                "ShapeOptions": {
                                                    "ShapeType": "rectangle",
                                                    "Fill": "E10600"
                                                },
                                                "Triggers": [
                                                    {
                                                        "Condition": "{Session.Track.CircuitName, Converter=StringEquals, Parameter=imola}",
                                                        "Property": "Width",
                                                        "Value": 600
                                                    },
                                                    {
                                                        "Condition": "{Session.Track.CircuitName, Converter=StringEquals, Parameter=portim√£o}",
                                                        "Property": "Width",
                                                        "Value": 600
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "BlockType": "image",
                "MarginBottom": -1080,
                "MarginTop": -44,
                "MarginRight": 0,
                "Opacity": 100,
                "HorizontalAlignment": "Right",
                "VerticalAlignment": "Center",
                "Height": 1150,
                "Source": "images/Tracks/banner.png"
            },
            {
                "Name": "headerBlock",
                "MarginRight": -1120,
                "MarginLeft": 0,
                "BlockType": "dock",
                "Orientation": "Horizontal",
                "Items": [
                    //headerLeft
                    {
                        "Name": "headerLeftPart",
                        "BlockType": "stack",
                        "Orientation": "Horizontal",
                        "Spacing": 0,
                        "HorizontalAlignment": "Left",
                        "Items": [
                            {
                                "BlockType": "image",
                                "Height": "800",
                                "HorizontalAlignment": "Left",
                                "Source": "images/Tracks/placeholder.png",
                                "Triggers": [
                                    {
                                        "Condition": "{Session.Track.CircuitName, Converter=EmptyObjectToFalse}",
                                        "Setters": [
                                            {
                                                "Property": "Source",
                                                "Value": "images/Tracks/{Session.Track.CircuitName}"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "Name": "headerLeftPart",
                                "BlockType": "stack",
                                "Orientation": "Vertical",
                                "VerticalAlignment": "Top",
                                "HorizontalAlignment": "Left",
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "VerticalAlignment": "Center",
                                        "Items": [
                                            {
                                                "BlockType": "component",
                                                "ComponentName": "event_info",
                                                "ComponentOptions": {
                                                    "Vars": {
                                                        "title0": "First Grand Prix",
                                                        "info0": "{Session.Track.Years}",
                                                        "title1": "Number of Laps",
                                                        "info1": "{Session.TotalLaps}"
                                                    }
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "BlockType": "stack",
                                        "VerticalAlignment": "Center",
                                        "Items": [
                                            {
                                                "BlockType": "component",
                                                "ComponentName": "event_info",
                                                "ComponentOptions": {
                                                    "Vars": {
                                                        "title0": "Circuit Length",
                                                        "info0": "{Session.Track.Length, Converter=NumberGroupWithSeparator, Parameter=.}",
                                                        "info00": "km",
                                                        "title1": "Turns",
                                                        "info1": "{Session.Track.NumberTurns}"
                                                    }
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "BlockType": "stack",
                                        "VerticalAlignment": "Center",
                                        "MarginTop": 0,
                                        "Spacing": 0,
                                        "Items": [
                                            {
                                                "BlockType": "component",
                                                "ComponentName": "event_info2",
                                                "ComponentOptions": {
                                                    "Vars": {
                                                        "title0": "Lap Record",
                                                        "info0": "{Session.Track.RaceLapRecordTime}",
                                                        "info00": "{Session.Track.RaceLapRecordDriverName}"
                                                    }
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "BlockType": "stack",
                                        "VerticalAlignment": "Center",
                                        "MarginTop": 0,
                                        "Spacing": 0,
                                        "Items": [
                                            {
                                                "BlockType": "component",
                                                "ComponentName": "event_info2",
                                                "ComponentOptions": {
                                                    "Vars": {
                                                        "title0": "Previous Fastest Lap",
                                                        "info0": "{Session.FastestLapTime}",
                                                        "info00": "{Session.FastestLapDriver.Name}",
                                                        "info000": " {Session.FastestLapDriver.RealName}"
                                                    }
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "BlockType": "stack",
                                        "VerticalAlignment": "Center",
                                        "MarginTop": 0,
                                        "Spacing": 0,
                                        "Items": [
                                            {
                                                "BlockType": "component",
                                                "ComponentName": "event_info3",
                                                "ComponentOptions": {
                                                    "Vars": {}
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}