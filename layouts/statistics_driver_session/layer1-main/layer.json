{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "Name": "headerBlock",
                "MarginBottom": "-15",
                "BlockType": "dock",
                "Orientation": "Horizontal",
                "Items": [
                    {
                        "BlockType": "component",
                        "ComponentName": "header_block_stats_official",
                        "ComponentOptions": {
                            "Vars": {
                                "fontsize0": "50",
                                "fontsize1": "80",
                                "source0": "{Season.Name, Converter=StringToUpperString} {Session.Track.CountryName, Converter=StringToUpperString}",
                                "source1": "{Statistics.Header, Converter=StringToUpperString}"
                            }
                        }
                    }
                ]
            },
            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Statistics.Drivers}",
                    "RowSpacing": 12,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 30,
                        "Foreground": "{Black}",
                        "MarginBottom": 8,
                        "Triggers": [
                            {
                                "Condition": "{DarkTheme}",
                                "Property": "Foreground",
                                "Value": "{White}"
                            }
                        ]
                    },
                    "Columns": [
                        // //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "component",
                                "RenderIf": "{RenderPositions}",
                                "ComponentName": "columns",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "60",
                                        "background": "171717",
                                        "source": "{Item.Position}",
                                        "font": "{FontBlack}",
                                        "foreground": "{White}",
                                        "fontsize": "52"
                                    }
                                }
                            }
                        },
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "RenderIf": "{DriverNumber}",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "60",
                                        "background": "171717",
                                        "source": "{Item.Driver.RaceNumber}",
                                        "font": "{FontBlack}",
                                        "foreground": "{Item.Team.Color}",
                                        "fontsize": "52"
                                    }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{RenderPositions}",
                                        "Property": "MarginLeft",
                                        "Value": "10"
                                    },
                                    {
                                        "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                                        "Property": "Foreground",
                                        "Value": "{ReserveDriverNumberForeground}"
                                    }
                                ]
                            }
                        },
                        //driver line
                        {
                            "Header": "",
                            "MarginLeft": 0,
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "driver_line_cell_official",
                                "Triggers": [
                                    {
                                        "Condition": "{RenderPositions}",
                                        "Property": "MarginLeft",
                                        "Value": "10"
                                    },
                                    {
                                        "Condition": "{DriverNumber}",
                                        "Property": "MarginLeft",
                                        "Value": "10"
                                    }
                                ]
                            }
                        },
                        //column 0
                        {
                            "Header": "{Statistics.Column0.Header}",
                            "IsSeparator": "{Statistics.Column0.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column0.GroupId}",
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value0"
                                    }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{DarkTheme}",
                                        "Property": "Background",
                                        "Value": "{White}"
                                    },
                                ]
                            }
                        },
                        //column 1
                        {
                            "Header": "{Statistics.Column1.Header}",
                            "IsSeparator": "{Statistics.Column1.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column1.GroupId}",
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
