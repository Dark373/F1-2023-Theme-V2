                                            {
                                                "Property" : "Foreground",
                                                "Value" : "{FastestLapQualSelectedForeground}"
                                            }
                                        ]
                                    }
                                ]                                 
                            }
                        },
                        {
                            "Header": "S3",
                            "Template": {
                                "BlockType": "text",                                
                                "Padding": "16, 0",                                                              
                                "Source": "{Item.FastestLapSector3}",
                                "FontSize" : 30,
                                "Background": "{BackgroundDefault}",
    "Triggers": [
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Foreground",
            "Value": "000000",
        },
    ],
                                "TextOptions" :{
                                    "FontName": "{Formula1-Italic}",
                                    "HorizontalAlignment" : "Center"
                                },
                                "Triggers" : [
                                     {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
