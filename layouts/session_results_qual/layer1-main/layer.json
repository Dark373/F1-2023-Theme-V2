        },
        {
            "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
            "Property": "Background",
            "Value": "{BackgroundDefault}"
        },
                                    {
                                        "Condition" : "{Item.IsOverallFastestSector3}",
                                        "Setters" :
                                        [
                                            {
                                                "Property" : "Foreground",
                                                "Value" : "{FastestLapQualSelectedForeground}"
                                            }
                                        ]
                                    }
                                ]                               
                            }
                        },

                        //points
                        {
                            "Header": "[LAPS]",
                            "Template": {
                                "BlockType": "dock",
                                "Padding": "16, 0",
                                "MarginLeft": 0,
                                "Background": "{BackgroundDefault}",
    "Triggers": [
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Foreground",
            "Value": "000000",
        },
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Background",
            "Value": "FFFFFF"
        },
        {
            "Condition": "{ChampionColour}",
            "Property": "Background",
            "Value": "E9C652"
        },
        {
            "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
            "Property": "Background",
            "Value": "{BackgroundDefault}"
        },
    ],
                                "HorizontalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.LapsCount, Converter=NumberZeroToEmpty}",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                         "Triggers": [
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Foreground",
            "Value": "000000",
        }
    ],
                                        "TextOptions": {
                                            "FontName": "{Formula1-Italic}",
                                            "FontSize": 30,                                            
                                            "HorizontalAlignment": "Center"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }            
        ]
    }
