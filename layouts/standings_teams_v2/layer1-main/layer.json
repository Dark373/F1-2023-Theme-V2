{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        
        "Orientation": "Vertical",
        "Items": [
            //header block
            {               
                "BlockType": "component",
                "ComponentName": "header_block_teams_official",
                "ComponentOptions" :
                {
                    "Vars":
                    {
                        "header" : "Team standings"
                    }
                }               
            },
            {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "MarginLeft": -105,
                    "MarginRight": 0,
                    "MarginBottom": -35,
                    "Spacing": 0,
                    "Items": [
                        {
                            "BlockType": "text",
                            "MarginTop": 0,
                            "MarginBottom": 0,
                            "HorizontalAlignment": "Right",
                            "VerticalAlignment": "Center",
                            "Source": "[POINTS AFTER THE]",                            
                            "FontName": "{Formula1-Regular}",
                            "FontSize": 25,
                            "Foreground": "000000",
                            "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Foreground",
            "Value": "FFFFFF",
        }
    ],
                        },
                        {
                            "BlockType": "text",
                            "VerticalAlignment": "Top",
                            "HorizontalAlignment": "Right",
                            "Source": "{GPName, Converter=StringToUpperString} GP",                            
                            "FontName": "{Formula1-Bold}",
                            "FontSize": 25,
                            "Foreground": "000000",
                            "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Foreground",
            "Value": "FFFFFF",
        },
        {
            "Condition": "{ChangeWordOrder}",
            "Property": "Source",
            "Value": "GP {GPName, Converter=StringToUpperString}",
        }
    ],
                        },
                    ],
"Triggers": [
        {
            "Condition": "{RenderPositions, Converter=BoolReverse}",
            "Property": "MarginLeft",
            "Value": -150
        }
    ],
                },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "MarginRight" : 60,
                "TableOptions": {
                    "ItemsSource": "{Standings.Teams}",
                    "RowSpacing": 12,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 30,
                        "Foreground": "000000",
                        "MarginBottom": 8,
                                "Triggers": [
                                    {
                                        "Condition": "{DarkOfficialRenders}",
                                        "Property": "Foreground",
                                        "Value": "FFFFFF",
                                    },
                                 ]
                    },
                    "Columns": [
                        //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType" : "component",
                                "RenderIf": "{RenderPositions}",                                
                                "ComponentName" : "position_cell_official",
                                "ComponentOptions" :{
                                    "Vars" :{
                                        "position" : "{Item.PositionString}"
                                    }
                                }                           
                            }
                        },

                        //team line
                        {
                            "Header": "",
                            "MarginLeft" : 10,
                            "WidthStretch" : true,                            
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "team_line_cell_official"   
                            }
                            
                        },
                        {
                            "Header": "",
                            "MarginLeft" : 10,
                            "Template":
                            {
                                "BlockType" : "component",
                                "ComponentName" : "position_jump_cell_official"    
                            }
                        },                        

                        //points
                        {
                            "Header": "",
                            "MarginLeft" : 10,
                            "Template": {
                                
                                "BlockType": "dock",
                                "Background": "{BackgroundDefault}",                               
                                "Items": [                                    
                                    {
                                        "BlockType": "text",
                                        "Padding": "20, 0",
                                        "Source": "{Item.Points}", 
                                        "FontName": "{Formula1-Black}",
                                        "Foreground": "FFFFFF",
                                        "FontSize": 48,
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "TextOptionsExtern": "primaryNumber",
                                        "Triggers": [
        {
            "Condition": "{Item.Points, Converter=EmptyObjectToTrue}",
            "Property": "Source",
            "Value": "0",
        },
        {
            "Condition": "{ChampionColour}",
            "Property": "Foreground",
            "Value": "E9C652"
        },
        {
            "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
            "Property": "Foreground",
            "Value": "FFFFFF"
        },
      ]
                                    }
                                ],
                                "Triggers" :
                                [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Background",
            "Value": "171717",
        },
                                    {
                                        "Condition" : "{Standings.IsPositionJumpForTeamsExists}",
                                        "Property" : "PaddingRight",
                                        "Value" : 4
                                    }
                                ]
                            }
                        },
                        {
                            "Header" : "[GAP]",
                            "MarginLeft" : 10,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "20, 0",
                                "FontName": "{Formula1-Black}",
                                "Foreground": "FFFFFF",
                                "FontSize": 48,
                                "Background": "{BackgroundDefault}",
    "Triggers": [
         {
            "Condition": "{Item.Index, Converter=NumberEquals, Parameter=0}",
            "Property": "Source",
            "Value": "",
        },
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Background",
            "Value": "171717",
        },
    ],
                                "Source" : "+{Item.PointsToLeaderDiff}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },

                        //podiums
                        {
                            "Header" : "[P1]",
                            "MarginLeft" : 10,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "40, 0",
                                "FontName": "{Formula1-Black}",
                                "FontSize": 48,
                                "Background": "{BackgroundDefault}",
    "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Background",
            "Value": "171717",
        },
    ],
                                "Source" : "{Item.CountP1, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{Standings1stCountForeground}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },
                        {
                            "Header" : "[P2]",
                            "MarginLeft" : 10,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "40, 0",
                                "FontName": "{Formula1-Black}",
                                "FontSize": 48,
                                "Background": "{BackgroundDefault}",
    "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Background",
            "Value": "171717",
        },
    ],
                                "Source" : "{Item.CountP2, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{Standings2ndCountForeground}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },
                        {
                            "Header" : "[P3]",
                            "MarginLeft" : 10,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "40, 0",
                                "FontName": "{Formula1-Black}",
                                "FontSize": 48,
                                "Background": "{BackgroundDefault}",
    "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Background",
            "Value": "171717",
        },
    ],
                                "Source" : "{Item.CountP3, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{Standings3rdCountForeground}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },

                        //stats
                        {
                            "Header" : "FL",
                            "MarginLeft" : 10,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "40, 0",
                                "FontName": "{Formula1-Black}",
                                "FontSize": 48,
                                "Background": "{BackgroundDefault}",
    "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Background",
            "Value": "171717",
        },
    ],
                                "Source" : "{Item.RaceFastestLapCount, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{StandingsFastestLapCountForeground}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },
                        {
                            "Header" : "[POLES]",
                            "MarginLeft" : 10,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "40, 0",
                                "FontName": "{Formula1-Black}",
                                "FontSize": 48,
                                "Background": "{BackgroundDefault}",
    "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Background",
            "Value": "171717",
        },
    ],
                                "Source" : "{Item.CountQualP1, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{StandingsPoleCountForeground}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },                        

                        //events
                        {
                            "Header" : "[EVENTS]",
                            "MarginLeft" : 10,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "80, 0",
                                "FontName": "{Formula1-Black}",
                                "Foreground": "FFFFFF",
                                "FontSize": 48,
                                "Background": "{BackgroundDefault}",
    "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Background",
            "Value": "171717",
        },
    ],
                                "Source" : "{Item.EventsCount, Converter=NumberZeroToEmpty}",                                
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        }


                    ]
                }
            }
        ]
    }
}
