                        //stints
                        {
                            "Header": "[STINTS]", 
                            "Template": {
                                "RenderIf": "{Stints}",
                                "BlockType": "itemstack",
                                "Spacing": 0,
                                "Padding": "0, 0",
                                "Background": "{BackgroundDefault}",
    "Triggers": [
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Background",
            "Value": "FFFFFF"
        },
        {
            "Condition": "{ChampionColour}",
            "Property": "Background",
            "Value": "E9C652"
        },
        {
            "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
            "Property": "Background",
            "Value": "{BackgroundDefault}"
        },
    ],
                                "ItemStackOptions": {
                                    "ItemSource": "{Item.Stints}",
                                    "Template": {
                                        "BlockType": "stack",
                                        "VerticalAlignment": "Center",
                                        "MarginRight" : 4,
                                        "Spacing": 3,
                                        "Items": [
                                            {
                                                "BlockType": "image",
                                                "Height": 36,
                                                "VerticalAlignment": "Center",
                                                "Source": "tyres_{Item.Tyres}.png"
                                            },
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.Laps}",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Center",
                                                "TextOptions": {
                                                    "FontName": "{Formula1-Italic}",
                                                    "FontSize": 18,
                                                    "HorizontalAlignment": "Center"
                                                },
                                            }   
                                        ]
                                    }
                                }
                            }
                        },
                        {
                            "Header": "[POINTS]",
                            "Template": {
                                "BlockType" : "component",                                
                                "ComponentName" : "columns",
                                "ComponentOptions" :{
                                    "Vars" :{
                                        "padding": "40, 0",
                                        "width": "",
                                        "background": "",
                                        "source" : "{Item.DriverPointsString}",
                                        "font" : "{Magistral-BoldItalic}",
                                        "foreground" : "{White}",
                                        "fontsize" : "30"
                                    }
                                },
                                "Triggers" : [
                                    {
                                        "Condition":"{Item.DriverPointsString, Converter=EmptyObjectToFalse}",
                                        "Property" : "Source",
                                        "Value" : "+{Item.DriverPointsString}"
                                    },
                                    {
                                        "Condition":"{Item.DriverPointsString, Converter=EmptyObjectToTrue}",
                                        "Property" : "Source",
                                        "Value" : ""
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
                                        "Property": "Foreground",
                                        "Value": "{Black}"
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
                                        "Property": "Background",
                                        "Value": "{White}"
