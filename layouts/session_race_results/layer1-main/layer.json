                                "ComponentOptions" :{
                                    "Vars" :{
                                        "padding": "75, 0",
                                        "width": "",
                                        "background": "",
                                        "source" : "+{Item.PenaltyTimeTotal}",
                                        "font" : "{FontItalic}",
                                        "foreground" : "",
                                        "fontsize" : "30"
                                    }
                                },
                                "Triggers" : [
                                    {
                                        "Condition":"{Item.PenaltyTimeIngame, Converter=NumberEquals, Parameter=0}",
                                        "Property" : "Source",
                                        "Value" : ""
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
                                        "Property": "Foreground",
                                        "Value": "{Black}"
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
