                            "Header": "",
                            "Template": {
                                "BlockType" : "component",  
                                "PaddingRight": 15, 
                                "RenderIf": "{RenderPositions}",                              
                                "ComponentName" : "columns",
                                "ComponentOptions" :{
                                    "Vars" :{
                                        "padding": "0, 0",
                                        "width": "45",
                                        "background": "",
                                        "source" : "{Item.Position}",
                                        "font" : "{FontItalic}",
                                        "foreground" : "",
                                        "fontsize" : "30"
                                    }
                                },
                                "Triggers" : [
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
                                        "Property": "Foreground",
                                        "Value": "{Black}"
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
                                        "Property": "Background",
                                        "Value": "{White}"
                                    },
                                    {
                                        "Condition": "{ChampionColour}",
                                        "Property": "Background",
                                        "Value": "E9C652"
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
                                        "Property": "Background",
                                        "Value": "{BackgroundDefault}"
                                    }
                                ]                           
