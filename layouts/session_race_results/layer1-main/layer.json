                                "BlockType" : "component",  
                                "RenderIf": "{DriverNumber}",                              
                                "ComponentName" : "columns",
                                "ComponentOptions" :{
                                    "Vars" :{
                                        "padding": "12, 0",
                                        "width": "",
                                        "background": "",
                                        "source" : "{Item.RaceNumber}",
                                        "font" : "{FontItalic}",
                                        "foreground" : "{Item.Team.Color}",
                                        "fontsize" : "30"
