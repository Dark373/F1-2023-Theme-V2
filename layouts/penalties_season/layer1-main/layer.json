{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType": "component",
                "ComponentName": "header_block_stats_official",
                "ComponentOptions": {
                    "Vars": {
                        "header": "PENALTIES"
                    }
                }
            },
            {
                "BlockType": "component",
                "ComponentName": "header_block_stats_official",
                "ComponentOptions": {
                    "Vars": {
                        "marginB": "-50",
                        "fontsize0": "60",
                        "fontsize1": "80",
                        "source0": "{Season.Name, Converter=StringToUpperString}",
                        "source1": "PENALTIES"
                    }
                }
            },
            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "MarginRight": 15,
                "TableOptions": {
                    "ItemsSource": "{Penalties.Drivers}",
                    "OrderByDescending": "PenaltyPointsActive",
                    "OrderByDescending2": "PenaltySeconds",
                    "OrderByDescending3": "PenaltyIngameSeconds",
                    "Limit": "{DriverLimit}",
                    "IndexStart": "{StartPositionsFrom}",
                    "RowSpacing": 12,
                    "ColSpacing": 0,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 30,
                        "Foreground": "{Black}",
                        "MarginBottom": 8,
                        "Triggers": [
                            {
                                "Condition": "{DarkTheme}",
                                "Property": "Foreground",
                                "Value": "{White}"
                            }
                        ]
                    },
                    "Columns": [
                        {
                            "Header": "",
                            "MarginLeft": "0",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "RenderIf": "{DriverNumber}",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "8, 0",
                                        "background": "171717",
                                        "source": "{Item.Driver.RaceNumber}",
                                        "font": "{FontBlack}",
                                        "foreground": "{Item.Team.Color}",
                                        "fontsize": "50"
                                    }
                                },
                            }
                        },
                        //driver line
                        {
                            "Header": "",
                            "WidthStretch": true,
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "driver_line_cell_official",
                                "ComponentOptions": {
                                    "Vars": {}
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{DriverNumber}",
                                        "Property": "MarginLeft",
                                        "Value": "10"
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "[PP]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "RenderIf": "{PenaltyPoints}",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "",
                                        "background": "171717",
                                        "source": "{Item.PenaltyPointsActive, Converter=NumberZeroToEmpty}",
                                        "font": "{FontBlack}",
                                        "foreground": "{StandingsPenaltyPointCountForeground}",
                                        "fontsize": "50"
                                    }
                                },
                            }
                        },
                        {
                            "Header": "[WA]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "RenderIf": "{Warnings}",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "",
                                        "background": "171717",
                                        "source": "{Item.PenaltyWarningsActive, Converter=NumberZeroToEmpty}",
                                        "font": "{FontBlack}",
                                        "foreground": "{B83939}",
                                        "fontsize": "50"
                                    }
                                }
                            }
                        },
                        {
                            "Header": "[STEWARDS]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "RenderIf": "{Penalties}",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "",
                                        "background": "171717",
                                        "source": "{Item.PenaltySeconds}s",
                                        "font": "{FontBlack}",
                                        "foreground": "{White}",
                                        "fontsize": "50"
                                    }
                                }
                            }
                        },
                        {
                            "Header": "[GAME]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "RenderIf": "{Penalties}",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "",
                                        "background": "171717",
                                        "source": "{Item.PenaltyIngameSeconds}s",
                                        "font": "{FontBlack}",
                                        "foreground": "{White}",
                                        "fontsize": "50"
                                    }
                                }
                            }
                        },
                        {
                            "Header": "[POSITIONS]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "RenderIf": "{Penalties}",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "",
                                        "background": "171717",
                                        "source": "{Item.PenaltyPositions, Converter=NumberZeroToEmpty}",
                                        "font": "{FontBlack}",
                                        "foreground": "{White}",
                                        "fontsize": "50"
                                    }
                                }
                            }
                        },
                        {
                            "Header": "[TOTAL]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "RenderIf": "{PenaltyPoints}",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "",
                                        "background": "171717",
                                        "source": "{Item.PenaltyPointsOverall, Converter=NumberZeroToEmpty}",
                                        "font": "{FontBlack}",
                                        "foreground": "{White}",
                                        "fontsize": "50"
                                    }
                                }
                            }
                        },
                        {
                            "Header": "[WO]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "RenderIf": "{PenaltyPoints}",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "",
                                        "background": "171717",
                                        "source": "{Item.PenaltyWarningsOverall, Converter=NumberZeroToEmpty}",
                                        "font": "{FontBlack}",
                                        "foreground": "{White}",
                                        "fontsize": "50"
                                    }
                                }
                            }
                        }
                    ]
                }
            },
            //description
            {
                "BlockType": "dock",
                "RenderIf": "{StatisticsDescription}",
                "Width": "*",
                "Height": "*",
                "Margin": "0, 28, 0, 0",
                "HorizontalAlignment": "Left",
                "Spacing": 0,
                "Items": [
                    {
                        "BlockType": "text",
                        "Width": "*",
                        "Foreground": "{Black}",
                        "Height": "38",
                        "Source": "PP - active penalty points, WA - active warnings, STEWARDS - penalty time (seconds) by stewards, GAME - penalty time (seconds) by game, POSITIONS - penalty positions by stewards, TOTAL - penalty points overall, WO - warnings overall",
                        "TextOptions": {
                            "FontSize": 16,
                            "Wrap": true,
                            "HorizontalAlignment": "Left"
                        },
                        "Triggers": [
                            {
                                "Condition": "{DarkTheme}",
                                "Property": "Foreground",
                                "Value": "{White}"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}