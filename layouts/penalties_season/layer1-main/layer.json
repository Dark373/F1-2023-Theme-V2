{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        
        "Orientation": "Vertical",
        "Items": [
            //header block
            {               
                "BlockType": "component",
                "ComponentName": "header_block_stats_official",
                "ComponentOptions" :
                {
                    "Vars":
                    {
                        "header" : "PENALTIES"
                    }
                }               
            },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "MarginRight" : 15,
              "TableOptions": {
                "ItemsSource": "{Penalties.Drivers}",
                "OrderByDescending": "PenaltyPointsActive",
                "OrderByDescending2": "PenaltySeconds",
                "OrderByDescending3": "PenaltyIngameSeconds", 
                "Limit": "{DriverLimit}",
                "IndexStart": "{StartPositionsFrom}",               
                "RowSpacing": 12,
                "ColSpacing": 0,
                "HeaderTemplate": {
                  "BlockType": "text",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 30,
                        "Foreground": "000000",
                        "MarginBottom": 8,
                                "Triggers": [
                                    {
                                        "Condition": "{DarkOfficialRenders}",
                                        "Property": "Foreground",
                                        "Value": "FFFFFF",
                                    },
                                 ]
                },
                "Columns": [

                  //driver line
                  {
                    "Header": "",
                    "WidthStretch": true,
                    "Template": {
                      "BlockType": "component",
                      "ComponentName": "driver_line_cell_official"
                    }
                  },

                  //points
                  {
                    "Header": "[PP]",
                    "MarginLeft": 15,
                    "Template": {

                      "BlockType": "dock",
                      "Background": "{BackgroundDefault}",
                      "Items": [
                        {
                          "BlockType": "text",
                          "Padding": "30, 0",
                          "Source": "{Item.PenaltyPointsActive, Converter=NumberZeroToEmpty}",
                          "HorizontalAlignment": "Center",
                          "VerticalAlignment": "Center",
                          "Foreground": "#B83939",
                          "TextOptionsExtern": "OfficialNumber"
                        }
                      ],
            "Triggers" : [
                {
                     "Condition": "{DarkOfficialRenders}",
                     "Property": "Background",
                     "Value": "171717"
                },
             ]
                    }
                  },

                  {
                    "Header": "[WARNINGS]",
                    "MarginLeft": 15,
                    "Template": {
                      "BlockType": "text",
                      "Padding": "12, 0",
                      "Background": "{BackgroundDefault}",
                      "Source": "{Item.PenaltyWarningsActive, Converter=NumberZeroToEmpty}",
                      "Foreground": "#B83939",
                      "TextOptionsExtern": "OfficialNumber",
            "Triggers" : [
                {
                     "Condition": "{DarkOfficialRenders}",
                     "Property": "Background",
                     "Value": "171717"
                },
             ]
                    }
                  },

                  {
                    "Header": "[STEWARDS]",
                    "MarginLeft": 15,
                    "Template": {
                      "BlockType": "text",
                      "Padding": "12, 0",
                      "Background": "{BackgroundDefault}",
                      "Source": "{Item.PenaltySeconds}s",
                      "Foreground": "FFFFFF",
                      "TextOptionsExtern": "OfficialNumber",
                      "Triggers": [
                         {
                                "Condition": "{Item.PenaltySeconds, Converter=NumberEquals, Parameter=0}",
                                "Property": "Source",
                                "Value": "ㅤ",
                         },
                {
                     "Condition": "{DarkOfficialRenders}",
                     "Property": "Background",
                     "Value": "171717"
                },
                       ],
                    }
                  },

                  {
                    "Header": "[POSITIONS]",
                    "MarginLeft": 15,
                    "Template": {
                      "BlockType": "text",
                      "Padding": "12, 0",
                      "Background": "{BackgroundDefault}",
                      "Source": "{Item.PenaltyPositions, Converter=NumberZeroToEmpty}",
                      "Foreground": "FFFFFF",
                      "TextOptionsExtern": "OfficialNumber",
                      "Triggers": [
                         {
                                "Condition": "{DarkOfficialRenders}",
                                "Property": "Background",
                                "Value": "171717",
                         },
                       ]
                    }
                  },

                  {
                    "Header": "[GAME]",
                    "MarginLeft": 15,
                    "Template": {
                      "BlockType": "text",
                      "Padding": "12, 0",
                      "Background": "{BackgroundDefault}",
                      "Source": "{Item.PenaltyIngameSeconds}s",
                      "Foreground": "FFFFFF",
                      "TextOptionsExtern": "OfficialNumber",
                      "Triggers": [
                         {
                                "Condition": "{Item.PenaltyIngameSeconds, Converter=NumberEquals, Parameter=0}",
                                "Property": "Source",
                                "Value": "ㅤ",
                         },
                         {
                                "Condition": "{DarkOfficialRenders}",
                                "Property": "Background",
                                "Value": "171717",
                         },
                       ],
                    }
                  },

                  {
                    "Header": "[PP-AT]",
                    "MarginLeft": 15,
                    "Template": {
                      "BlockType": "text",
                      "Padding": "12, 0",
                      "Background": "{BackgroundDefault}",
                      "Source": "{Item.PenaltyPointsOverall, Converter=NumberZeroToEmpty}",
                      "Foreground": "FFFFFF",
                      "TextOptionsExtern": "OfficialNumber",
                      "Triggers": [
                         {
                                "Condition": "{DarkOfficialRenders}",
                                "Property": "Background",
                                "Value": "171717",
                         },
                       ],
                    }
                  },

                  {
                    "Header": "[WARNS-AT]",
                    "MarginLeft": 15,
                    "Template": {
                      "BlockType": "text",
                      "Padding": "12, 0",
                      "Background": "{BackgroundDefault}",
                      "Source": "{Item.PenaltyWarningsOverall, Converter=NumberZeroToEmpty}",
                      "Foreground": "FFFFFF",
                      "TextOptionsExtern": "OfficialNumber",
                      "Triggers": [
                         {
                                "Condition": "{DarkOfficialRenders}",
                                "Property": "Background",
                                "Value": "171717",
                         },
                       ],
                    }
                  }
                ]
              }
            }
        ]
    }
}
