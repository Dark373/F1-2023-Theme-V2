{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        
        "Orientation": "Vertical",
        "Items": [
            //header block
            {               
                "BlockType": "component",
                "ComponentName": "header_block_stats_official",
                "ComponentOptions" :
                {
                    "Vars":
                    {
                        "header" : "PENALTIES"
                    }
                }               
            },
            {               
                "BlockType": "component",
                "ComponentName": "header_block_stats_official",
                "ComponentOptions" :{
                    "Vars" : {
                        "marginB" : "-50",
                        "fontsize0" : "60",
                        "fontsize1" : "80",
                        "source0" : "{Season.Name, Converter=StringToUpperString}",
                        "source1" : "PENALTIES"
                    }
                }       
            },
            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "MarginRight" : 15,
              "TableOptions": {
                "ItemsSource": "{Penalties.Drivers}",
                "OrderByDescending": "PenaltyPointsActive",
                "OrderByDescending2": "PenaltySeconds",
                "OrderByDescending3": "PenaltyIngameSeconds", 
                "Limit": "{DriverLimit}",
                "IndexStart": "{StartPositionsFrom}",               
                "RowSpacing": 12,
                "ColSpacing": 0,
                "HeaderTemplate": {
                  "BlockType": "text",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 30,
                        "Foreground": "000000",
                        "MarginBottom": 8,
                                "Triggers": [
                                    {
                                        "Condition": "{DarkOfficialRenders}",
                                        "Property": "Foreground",
                                        "Value": "FFFFFF",
                                    },
                                 ]
                },
                "Columns": [ 
                        { 
                            "Header": "",
                            "MarginLeft": "0",
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "stat_columns",
                                "RenderIf": "{DriverNumber}",
                                "ComponentOptions": {
                                    "Vars": 
                                        {
                                            "padding": "8, 0",
                                            "background": "171717",
                                            "source" : "{Item.Driver.RaceNumber}",
                                            "font": "{FontBlack}",
                                            "foreground": "{Item.Team.Color}",
                                            "fontsize": "50"
                                        }
                                },   
                            }
                        },
                  //driver line
                        {
                            "Header": "",
                            "WidthStretch" : true,                            
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "driver_line_cell_official",
                                "ComponentOptions": {
                                    "Vars": 
                                        {
                                        }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{DriverNumber}",
                                        "Property": "MarginLeft",
                                        "Value": "10",
                                    }
                                ]    
                            }
                        },

                        {
                            "Header": "[PP]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "stat_columns",
                                "RenderIf": "{PenaltyPoints}",
                                "ComponentOptions": {
                                    "Vars": 
                                        {
                                            "padding": "20, 0",
                                            "background": "171717",
                                            "source" : "{Item.PenaltyPointsActive, Converter=NumberZeroToEmpty}",
                                            "font": "{FontBlack}",
                                            "foreground": "{StandingsPenaltyPointCountForeground}",
                                            "fontsize": "50"
                                        }
                                },    
                            }
                        },
                        {
                            "Header": "[WARNINGS]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "stat_columns",
                                "RenderIf": "{Warnings}",
                                "ComponentOptions": {
                                    "Vars": 
                                        {
                                            "padding": "20, 0",
                                            "background": "171717",
                                            "source" : "{Item.PenaltyWarningsActive, Converter=NumberZeroToEmpty}",
                                            "font": "{FontBlack}",
                                            "foreground": "{B83939}",
                                            "fontsize": "50"
                                        }
                                },    
                            }
                        },
                        {
                            "Header": "[STEWARDS]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "stat_columns",
                                "RenderIf": "{Penalties}",
                                "ComponentOptions": {
                                    "Vars": 
                                        {
                                            "padding": "20, 0",
                                            "background": "171717",
                                            "source" : "{Item.PenaltySeconds}s",
                                            "font": "{FontBlack}",
                                            "foreground": "{White}",
                                            "fontsize": "50"
                                        }
                                },    
                            }
                        },
                        {
                            "Header": "[GAME]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "stat_columns",
                                "RenderIf": "{Penalties}",
                                "ComponentOptions": {
                                    "Vars": 
                                        {
                                            "padding": "20, 0",
                                            "background": "171717",
                                            "source" : "{Item.PenaltyIngameSeconds}s",
                                            "font": "{FontBlack}",
                                            "foreground": "{White}",
                                            "fontsize": "50"
                                        }
                                },    
                            }
                        },
                        {
                            "Header": "[POSITIONS]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "stat_columns",
                                "RenderIf": "{Penalties}",
                                "ComponentOptions": {
                                    "Vars": 
                                        {
                                            "padding": "20, 0",
                                            "background": "171717",
                                            "source" : "{Item.PenaltyPositions, Converter=NumberZeroToEmpty}",
                                            "font": "{FontBlack}",
                                            "foreground": "{White}",
                                            "fontsize": "50"
                                        }
                                },    
                            }
                        },
                        {
                            "Header": "[TOTAL]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "stat_columns",
                                "RenderIf": "{PenaltyPoints}",
                                "ComponentOptions": {
                                    "Vars": 
                                        {
                                            "padding": "20, 0",
                                            "background": "171717",
                                            "source" : "{Item.PenaltyPointsOverall, Converter=NumberZeroToEmpty}",
                                            "font": "{FontBlack}",
                                            "foreground": "{White}",
                                            "fontsize": "50"
                                        }
                                },    
                            }
                        },
                        {
                            "Header": "[WARNS-AT]",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "stat_columns",
                                "RenderIf": "{PenaltyPoints}",
                                "ComponentOptions": {
                                    "Vars": 
                                        {
                                            "padding": "20, 0",
                                            "background": "171717",
                                            "source" : "{Item.PenaltyWarningsOverall, Converter=NumberZeroToEmpty}",
                                            "font": "{FontBlack}",
                                            "foreground": "{White}",
                                            "fontsize": "50"
                                        }
                                },    
                            }
                        },
                   ]
                }  
            }
        ]
    }
}
