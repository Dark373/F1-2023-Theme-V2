{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",    
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType" : "component",
                "ComponentName" : "header_block_session"
            },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Session.Drivers}",
                    "Limit": "{DriverLimit}",
                    "IndexStart": "{StartPositionsFrom}",
                    "RowSpacing": 30,
                    "ColSpacing": 0,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 12,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [
                        //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType" : "component",                                
                                "ComponentName" : "position_cell",
                                "PaddingRight": 15,
                                "ComponentOptions" :{
                                    "Vars" :{
                                        "position" : "{Item.PositionString}"
                                    }
                                }
                            }
                        },

                        //driver line
                        {
                            "Header": "",
                            "WidthStretch" : true,
                            "Template":
                            {
                                "BlockType" : "component",
                                "ComponentName" : "driver_line_cell"                                
                            }
                        },
                        {
                            "Header": "",
                            "WidthStretch" : true,
                            "Template":
                            {
                                "BlockType" : "component",
                                "ComponentName" : "team_line_cell"                                
                            }
                        },                                                        

                        //sectors
                        {
                            "Header": "[Q1]",
                            "Template": {
                                "BlockType": "text",
                                "Padding": "20, 0",
                                "Source": "{Item.QualQ1Time}",
                                "Background": "{BackgroundDefault}",
                                "MarginRight": 0,
                                "HorizontalAlignment": "Left",
                                "TextOptionsExtern" : "driverCell",
                                "TextOptions": {
                                    "FontSize": 30,
                                    "HorizontalAlignment": "Center"
                                },
                                "Triggers" :[
                                    {
                                        "Condition" : "{RenderQualiStints}",
                                        "Property" : "MarginRight",
                                        "Value" : 0
                                    },
                                    {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Foreground",
            "Value": "000000",
        },
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Background",
            "Value": "FFFFFF"
        },
        {
            "Condition": "{ChampionColour}",
            "Property": "Background",
            "Value": "E9C652"
        },
        {
            "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
            "Property": "Background",
            "Value": "{BackgroundDefault}"
        },
                                    {
                                        "Condition" : "{Item.QualQ1Time, Converter=EmptyObjectToTrue}",
                                        "Property" : "Source",
                                        "Value" : ""
                                    },
                                ] 
                            }
                        },
                        {
                            "Header": "[Q2]",
                            "Template": {
                                "BlockType": "text",
                                "Padding": "20, 0",
                                "Source": "{Item.QualQ2Time}",
                                "Background": "{BackgroundDefault}",
                                "MarginRight": 0,
                                "HorizontalAlignment": "Left",
                                "TextOptionsExtern" : "driverCell",
                                "TextOptions": {
                                    "FontSize": 30,
                                    "HorizontalAlignment": "Center"
                                },
                                "Triggers" :[
                                    {
                                        "Condition" : "{RenderQualiStints}",
                                        "Property" : "MarginRight",
                                        "Value" : 0
                                    },
                                    {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Foreground",
            "Value": "000000",
        },
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Background",
            "Value": "FFFFFF"
        },
        {
            "Condition": "{ChampionColour}",
            "Property": "Background",
            "Value": "E9C652"
        },
        {
            "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
            "Property": "Background",
            "Value": "{BackgroundDefault}"
        },
                                    {
                                        "Condition" : "{Item.QualQ2Time, Converter=EmptyObjectToTrue}",
                                        "Property" : "Source",
                                        "Value" : ""
                                    },
                                ] 
                            }
                        },
                        {
                            "Header": "[Q3]",
                            "Template": {
                                "BlockType": "text",
                                "Padding": "20, 0",
                                "Source": "{Item.QualQ3Time}",
                                "Background": "{BackgroundDefault}",
                                "MarginRight": 0,
                                "HorizontalAlignment": "Left",
                                "TextOptionsExtern" : "driverCell",
                                "TextOptions": {
                                    "FontSize": 30,
                                    "HorizontalAlignment": "Center"
                                },
                                "Triggers" :[
                                    {
                                        "Condition" : "{RenderQualiStints}",
                                        "Property" : "MarginRight",
                                        "Value" : 0
                                    },
                                    {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Foreground",
            "Value": "000000",
        },
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Background",
            "Value": "FFFFFF"
        },
        {
            "Condition": "{ChampionColour}",
            "Property": "Background",
            "Value": "E9C652"
        },
        {
            "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
            "Property": "Background",
            "Value": "{BackgroundDefault}"
        },
                                    {
                                        "Condition" : "{Item.QualQ3Time, Converter=EmptyObjectToTrue}",
                                        "Property" : "Source",
                                        "Value" : ""
                                    }
                                ] 
                            }
                        },
                        {
                            "Header": "[INTERVAL]",
                            "Template": {                                                               
                                "BlockType": "dock",
                                "Padding": "0, 0",                                
                                "VerticalAlignment" : "Center",
                                "HorizontalAlignment" : "Center",
                                "Background": "{BackgroundDefault}",
    "Triggers": [
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Foreground",
            "Value": "000000",
        },
        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "Background",
            "Value": "FFFFFF"
        },
        {
            "Condition": "{ChampionColour}",
            "Property": "Background",
            "Value": "E9C652"
        },
        {
            "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
            "Property": "Background",
            "Value": "{BackgroundDefault}"
        },
    ], 
                                "Items" :[
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Time}",
                                        "VerticalAlignment" : "Center",
                                        "HorizontalAlignment": "Center",
                                        "TextOptions": {
                                            "FontName": "{Formula1-Regular}",
                                            "FontSize": 30,
                                            "HorizontalAlignment": "Center"
                                        },
                                        "Triggers" : [
                                            {
                                                "Condition" : "{Item.Position, Converter=NumberEquals, Parameter=1}",
                                                "Setters" :
                                                [
                                                    {
                                                        "Property" : "Foreground",
                                                        "Value" : "FFFFFF"
                                                    }
                                                ]
                                            },
                                            {
                                                "Condition" : "{Item.Position, Converter=NumberGreater, Parameter=10}",
                                                "Setters" :
                                                [
                                                    {
                                                        "Property" : "Foreground",
                                                        "Value" : "#13151D"
                                                    }
                                                ]
                                            }
                                        ]     
                                    },
                                ]                                 
                            }
                        },

                        //laps
                        {
                            "Header": "[Laps]",
                            "Template": {
                                "BlockType": "dock",
                                "Padding": "16, 0",
                                "MarginLeft": 12,
                                "Background": "{BackgroundDefault}",
                                "HorizontalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.LapsCount, Converter=NumberZeroToEmpty}",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "TextOptions": {
                                            "FontName": "{FontNameDefault}",
                                            "FontSize": 30,                                            
                                            "HorizontalAlignment": "Center"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }            
        ]
    }
}
