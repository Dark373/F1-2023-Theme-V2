{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "Name": "headerBlock",
                "MarginBottom": "0",
                "BlockType": "dock",
                "Orientation": "Horizontal",
                "Items": [
                    {
                        "BlockType": "component",
                        "ComponentName": "header_block_standings",
                        "ComponentOptions": {
                            "Vars": {
                                "fontsize0": "57",
                                "fontsize1": "35",
                                "source0": "",
                                "source1": "[{Statistics.Header, Converter=StringToUpperString}]"
                            }
                        }
                    }
                ]
            },
            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Statistics.Drivers}",
                    "Limit": "{DriverLimit}",
                    "IndexStart": "{StartPositionsFrom}",
                    "RowSpacing": 12,
                    "ColSpacing": 0,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 30,
                        "Foreground": "{Black}",
                        "MarginBottom": 8,
                        "Triggers": [
                            {
                                "Condition": "{DarkTheme}",
                                "Property": "Foreground",
                                "Value": "{White}"
                            }
                        ]
                    },
                    "Columns": [
                        // //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "component",
                                "RenderIf": "{RenderPositions}",
                                "ComponentName": "columns",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "60",
                                        "background": "171717",
                                        "source": "{Item.Position}",
                                        "font": "{FontBlack}",
                                        "foreground": "{White}",
                                        "fontsize": "52"
                                    }
                                }
                            }
                        },
                        {
                            "Header": "",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "columns",
                                "RenderIf": "{DriverNumber}",
                                "ComponentOptions": {
                                    "Vars": {
                                        "padding": "20, 0",
                                        "width": "60",
                                        "background": "171717",
                                        "source": "{Item.Driver.RaceNumber}",
                                        "font": "{FontBlack}",
                                        "foreground": "{Item.Team.Color}",
                                        "fontsize": "52"
                                    }
                                },
                                "Triggers" : [
                                    {
                                        "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                                        "Property": "Foreground",
                                        "Value": "{ReserveDriverNumberForeground}"
                                    }
                                ]
                            }
                        },
                        //driver line
                        {
                            "Header": "",
                            "WidthStretch": true,
                            "MarginLeft": 0,
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "driver_line_cell_official",
                                "ComponentOptions": {
                                    "Vars": {}
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{RenderPositions}",
                                        "Property": "MarginLeft",
                                        "Value": "10"
                                    },
                                    {
                                        "Condition": "{DriverNumber}",
                                        "Property": "MarginLeft",
                                        "Value": "10"
                                    }
                                ]
                            }
                        },
                        //column 0
                        {
                            "Header": "{Statistics.Column0.Header}",
                            "IsSeparator": "{Statistics.Column0.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column0.GroupId}",
                            "WidthStretch": true,
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value0"
                                    }
                                }
                            }
                        },
                        //column 1
                        {
                            "Header": "{Statistics.Column1.Header}",
                            "IsSeparator": "{Statistics.Column1.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column1.GroupId}",
                            "WidthStretch": true,
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value1"
                                    }
                                }
                            }
                        },
                        //column 2
                        {
                            "Header": "{Statistics.Column2.Header}",
                            "WidthStretch": true,
                            "IsSeparator": "{Statistics.Column2.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column2.GroupId}",
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value2"
                                    }
                                }
                            }
                        },
                        //column 3
                        {
                            "Header": "{Statistics.Column3.Header}",
                            "WidthStretch": true,
                            "IsSeparator": "{Statistics.Column3.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column3.GroupId}",
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value3"
                                    }
                                }
                            }
                        },
                        //column 4
                        {
                            "Header": "{Statistics.Column4.Header}",
                            "IsSeparator": "{Statistics.Column4.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column4.GroupId}",
                            "MarginLeft": 10,
                            "WidthStretch": true,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value4"
                                    }
                                }
                            }
                        },
                        //column 5
                        {
                            "Header": "{Statistics.Column5.Header}",
                            "IsSeparator": "{Statistics.Column5.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column5.GroupId}",
                            "WidthStretch": true,
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value5"
                                    }
                                }
                            }
                        },
                        //column 6
                        {
                            "Header": "{Statistics.Column6.Header}",
                            "IsSeparator": "{Statistics.Column6.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column6.GroupId}",
                            "WidthStretch": true,
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value6"
                                    }
                                }
                            }
                        },
                        //column 7
                        {
                            "Header": "{Statistics.Column7.Header}",
                            "IsSeparator": "{Statistics.Column7.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column7.GroupId}",
                            "WidthStretch": true,
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value7"
                                    }
                                }
                            }
                        },
                        //column 8
                        {
                            "Header": "{Statistics.Column8.Header}",
                            "IsSeparator": "{Statistics.Column8.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column8.GroupId}",
                            "WidthStretch": true,
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value8"
                                    }
                                }
                            }
                        }
                    ]
                }
            },
        ]
    }
}