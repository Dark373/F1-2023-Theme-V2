{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
           //header block
            {
                "Name": "headerBlock",
                "MarginBottom": "0",
                "BlockType": "dock",
                "Orientation": "Horizontal",
                "Items": [
                    {
                        "BlockType" : "component",
                        "ComponentName" : "header_block_standings", 
                        "ComponentOptions" :{
                            "Vars" :{
                                "fontsize0" : "57",
                                "fontsize1" : "35",
                                "source0" : "",
                                "source1" : "[{Statistics.Header, Converter=StringToUpperString}]"
                            }
                        } 
                    }
                ]
            },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Statistics.Drivers}",
                    "Limit": "{DriverLimit}",
                    "IndexStart": "{StartPositionsFrom}",
                    "RowSpacing": 12,
                    "ColSpacing": 0,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 30,
                        "Foreground": "000000",
                        "MarginBottom": 8,
                                "Triggers": [
                                    {
                                        "Condition": "{DarkOfficialRenders}",
                                        "Property": "Foreground",
                                        "Value": "FFFFFF",
                                    },
                                 ]
                    },
                    "Columns": [
                        // //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType" : "component",  
                                "RenderIf": "{RenderPositions}",                              
                                "ComponentName" : "columns",
                                "ComponentOptions" :{
                                    "Vars" :{
                                        "padding": "20, 0",
                                        "width": "60",
                                        "background": "171717",
                                        "source" : "{Item.Position}",
                                        "font" : "{FontBlack}",
                                        "foreground" : "{White}",
                                        "fontsize" : "52"
                                    }
                                }                           
                            }
                        }, 
                        { 
                            "Header": "",
                            "MarginLeft": "10",
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "columns",
                                "RenderIf": "{DriverNumber}",
                                "ComponentOptions": {
                                "Vars": 
                                    {
                                        "padding": "20, 0",
                                        "width": "60",
                                        "background": "171717",
                                        "source" : "{Item.Driver.RaceNumber}",
                                        "font" : "{FontBlack}",
                                        "foreground" : "{Item.Team.Color}",
                                        "fontsize" : "52"
                                    }
                                },    
                            }
                        },
                        //driver line
                        {
                            "Header": "",
                            "WidthStretch": true,
                            "MarginLeft": 0,
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "driver_line_cell_official",
                                "ComponentOptions": {
                                    "Vars": 
                                        {
                                        }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{RenderPositions}",
                                        "Property": "MarginLeft",
                                        "Value": "10",
                                    },
                                    {
                                        "Condition": "{DriverNumber}",
                                        "Property": "MarginLeft",
                                        "Value": "10",
                                    }
                                ]
                            }
                        },

                        //column 0
                        {
                            "Header": "{Statistics.Column0.Header}",
                            "IsSeparator": "{Statistics.Column0.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column0.GroupId}",
                            "WidthStretch": true,
                            "MarginLeft": 10,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value0"
                                    }
                                }
                            }
                        },

                        //column 1
                        {
                            "Header": "{Statistics.Column1.Header}",
