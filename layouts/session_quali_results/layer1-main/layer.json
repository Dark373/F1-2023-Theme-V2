                                    "Vars" :{
                                        "padding": "20, 0",
                                        "width": "",
                                        "background": "",
                                        "source" : "{Item.Time}",
                                        "font" : "{FontItalic}",
                                        "foreground" : "",
                                        "fontsize" : "30"
                                    }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
                                        "Property": "Foreground",
                                        "Value": "{Black}"
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
                                        "Property": "Background",
                                        "Value": "{White}"
                                    },
                                    {
                                        "Condition": "{ChampionColour}",
                                        "Property": "Background",
                                        "Value": "E9C652"
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
                                        "Property": "Background",
                                        "Value": ""
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
                                        "Property": "Source",
                                        "Value": ""
                                    },
                                    {
                                        "Condition": "{Time, Converter=BoolReverse}",
                                        "Property": "Source",
                                        "Value": "{Item.Time}"
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
                                        "Property": "Foreground",
                                        "Value": "{FastestLapQualSelectedForeground}"
                                    },
                                    {
                                        "Condition": "{Item.Time, Converter=StringEquals, Parameter=0.000}",
                                        "Property": "Source",
                                        "Value": ""
                                    }
                                ]                           
                            }
                        },
                        {
                            "Header": "[TYRE]",
                            "Template": {                                                               
                                "BlockType": "dock",
                                "RenderIf": "{Stints}",
                                "Padding": "40, 0",                                
                                "VerticalAlignment" : "Center",
                                "HorizontalAlignment" : "Center",
                                "Background": "{BackgroundDefault}",
                                "Triggers": [
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
                                        "Property": "Background",
                                        "Value": "FFFFFF"
                                    },
                                    {
                                        "Condition": "{ChampionColour}",
                                        "Property": "Background",
                                        "Value": "E9C652"
                                    },
                                    {
                                        "Condition": "{ItemIndex, Converter=NumberGreater, Parameter=0}",
                                        "Property": "Background",
                                        "Value": ""
                                    },
                                ], 
                                "Items" :[
                                    {
                                        "BlockType": "image",
                                        "Source": "tyres_{Item.FastestLapTyres}.png",
                                        "VerticalAlignment" : "Center",
                                        "HorizontalAlignment": "Center",
                                        "Height": 38,
                                        "Width": 38,     
                                    },
                                ]                                 
                            }
                        },
